<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_bank_wizard_rml_form" model="ir.ui.view">
            <field name="name">bank.wizard.rml.form</field>
            <field name="model">bank.wizard.rml</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Bank Details" version="7.0">
                <group  colspan="4">
                	<group>
                		<field name="employee_one"/>
                		<field name="period_id"/>
		                <field name="payment_code"/>
	                </group>
	                <group>
	                	<field name="employee_two"/>
	                	<field name="account_type"/>
	                	<field name="acc_unit"/>
	                </group>
                </group>
                <notebook>
                	<page string="Bank Name">
                		<field name="bank_ids"/>
                	</page>
                </notebook>
                <footer>
                    <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_bank_wizard_rml" model="ir.actions.act_window">
            <field name="name">ePayment Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.wizard.rml</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
   

        <menuitem
            name="ePayment Schedule"
            parent="hr_payroll_payslip_report.payroll_report_parent"
            action="action_bank_wizard_rml"
            sequence="20" 
            id="menu_bank_report"
           />
